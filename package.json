{
  "name": "qualitycase.ru",
  "version": "0.0.3",
  "repository": {
    "type": "git",
    "url": "git://github.com/DmitriyRudenskiy/qualitycase.ru.git"
  },
  "license": "MIT",
  "engines": {
    "node": "12.3.1"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "HOST=0.0.0.0 PORT=8080 ./node_modules/.bin/supervisor src/index.js",
    "test": "./node_modules/.bin/jest --notify",
    "pretty": "./node_modules/.bin/prettier --tab-width 4 --no-semi --single-quote --trailing-comma=none --end-of-line=lf --write '{src,tests}/**/*.js'",
    "lint": "./node_modules/.bin/eslint ./src --color",
    "format": "eslint lib test --fix",
    "lint2": "eslint lib test",
    "test2": "eslint lib test && nyc ava",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "cover": "jest --coverage",
    "clean": "rimraf dist",
    "build": "../node_modules/.bin/babel vendor/highlightjs/index.js --out-file ./out/app.js --presets babel-preset-es2015"
  },
  "dependencies": {
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "dotenv": "^6.2.0",
    "koa": "^2.8.1",
    "koa-body": "^4.1.1",
    "koa-helmet": "^4.2.1",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "koa-swig": "^2.2.1",
    "sequelize": "^5.16.0",
    "serve-favicon": "^2.5.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.5",
    "@babel/core": "^7.11.5",
    "@babel/node": "^7.10.5",
    "@babel/preset-env": "^7.11.5",
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.15.2",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-utils": ">=1.4.1",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^6.1.0",
    "gulp-babel": "^8.0.0",
    "gulp-clean-css": "^4.3.0",
    "gulp-concat": "^2.6.1",
    "gulp-csslint": "^1.0.1",
    "gulp-cssmin": "^0.2.0",
    "gulp-load-plugins": "^1.6.0",
    "gulp-minify": "^3.1.0",
    "gulp-strip-css-comments": "^2.0.0",
    "lodash": ">=4.17.13",
    "prettier": "^1.18.2",
    "supervisor": "^0.12.0"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": true
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "plugin:jest/recommended"
    ],
    "env": {
      "jest": true,
      "browser": true,
      "node": true
    },
    "rules": {
      "indent": [
        "error",
        4,
        {
          "SwitchCase": 1
        }
      ],
      "space-before-function-paren": [
        "error",
        {
          "anonymous": "never",
          "named": "always",
          "asyncArrow": "always"
        }
      ]
    },
    "plugins": [
      "jest"
    ]
  }
}
