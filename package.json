{
  "name": "qualitycase.ru",
  "version": "0.0.2",
  "scripts": {
    "build": "babel server --out-dir build --presets=es2015 && webpack",
    "start": "node src/",
    "dev": "./node_modules/.bin/supervisor src/index.js",
    "test": "./node_modules/.bin/jest --notify",
    "pretty": "./node_modules/.bin/prettier --tab-width 4 --no-semi --single-quote --trailing-comma=none --end-of-line=lf --write '{src,tests}/**/*.js'",
    "lint": "./node_modules/.bin/eslint ./src --color"
  },
  "dependencies": {
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "dotenv": "^6.2.0",
    "koa": "^2.7.0",
    "koa-body": "^4.1.0",
    "koa-helmet": "^4.1.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "koa-swig": "^2.2.1",
    "sequelize": "^4.44.0",
    "serve-favicon": "^2.5.0"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": true
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "plugin:jest/recommended"
    ],
    "env": {
      "jest": true,
      "browser": true,
      "node": true
    },
    "rules": {
      "indent": [
        "error",
        4,
        {
          "SwitchCase": 1
        }
      ],
      "space-before-function-paren": [
        "error",
        {
          "anonymous": "never",
          "named": "always",
          "asyncArrow": "always"
        }
      ]
    },
    "plugins": [
      "jest"
    ]
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jest": "^22.6.4",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^6.1.0",
    "gulp-concat": "^2.6.1",
    "gulp-csslint": "^1.0.1",
    "gulp-cssnano": "^2.1.3",
    "gulp-load-plugins": "^1.5.0",
    "gulp-strip-css-comments": "^2.0.0",
    "prettier": "^1.17.1",
    "supervisor": "^0.12.0"
  }
}
