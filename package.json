{
  "name": "qualitycase.ru",
  "version": "0.0.2",
  "scripts": {
    "build": "babel server --out-dir build --presets=es2015 && webpack",
    "start": "node app/",
    "dev": "./node_modules/.bin/supervisor app/index.js",
    "test": "./node_modules/.bin/jest --notify",
    "pretty": "./node_modules/.bin/prettier --tab-width 4 --no-semi --single-quote --trailing-comma es5 --write '{src,tests}/**/*.js'"
  },
  "dependencies": {
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "dotenv": "^6.2.0",
    "koa": "^2.7.0",
    "koa-body": "^4.0.7",
    "koa-helmet": "^4.0.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "koa-swig": "^2.2.1",
    "sequelize": "^4.42.0",
    "serve-favicon": "^2.5.0"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": true
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "plugin:jest/recommended"
    ],
    "env": {
      "jest": true,
      "browser": true,
      "node": true
    },
    "plugins": [
      "jest"
    ]
  },
  "devDependencies": {
    "prettier": "^1.16.3"
  }
}
